<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moviemania.akash.projectwork.Delete_account"
    android:orientation="vertical"
    android:id="@+id/passu">

    <android.support.v7.widget.Toolbar
        android:id="@+id/app_barrrrrr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1E90FF"
        android:theme="@style/toolbarstyle" />

    <EditText
        android:id="@+id/currpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Current Password"
        android:inputType="textPassword"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <EditText
        android:id="@+id/confirmcurrpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <com.balysv.materialripple.MaterialRippleLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/transparent"
        android:descendantFocusability="afterDescendants"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:mrl_rippleAlpha="0.1"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"


        >

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffa500"
            android:text="DONE"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#f7f7f9"
            android:textStyle="bold" />
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
