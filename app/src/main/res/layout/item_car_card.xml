<com.balysv.materialripple.MaterialRippleLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/transparent"
    android:descendantFocusability="afterDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:mrl_rippleAlpha="0.1"
    app:mrl_rippleDelayClick="true"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleRoundedCorners="4dp"
    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        android:id="@+id/card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/fl">

               <ImageView
                   android:id="@+id/movieTumbnail"
                   android:layout_width="match_parent"
                   android:layout_height="150dp"
                   android:layout_alignParentTop="true"
                   android:src="@drawable/ic_launcher"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   />

               <ProgressBar
                   android:id="@+id/pb1"
                   android:layout_width="wrap_content"
                   android:layout_height="150dp"
                   android:layout_gravity="center"/>

           </FrameLayout>

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl"
                android:gravity="center|top"
                android:paddingLeft="16dp"
                android:paddingTop="24dp"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:text="xfgvsffsbffv"
          android:textStyle="bold"
                android:layout_margin="8dp"
                android:textColor="#ffffff"

               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieTitle"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movieReleaseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/movieTitle"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingBottom="24dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="xfgvsffsbffv"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="#ffffff"

                    />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   >


                   <RatingBar

                       android:id="@+id/movieAudienceScore"
                       style="@android:style/Widget.Holo.Light.RatingBar.Indicator"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignParentEnd="true"
                       android:layout_alignParentRight="true"
                       android:layout_below="@+id/movieTitle"
                       android:layout_weight="1"
                       android:isIndicator="true"
                       android:progressBackgroundTint="#D3D3D3"
                       android:progressTint="@color/white"
                       android:max="5"
                       android:numStars="5"
                       />

               </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</com.balysv.materialripple.MaterialRippleLayout>