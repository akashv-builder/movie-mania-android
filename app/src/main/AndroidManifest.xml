<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moviemania.akash.projectwork" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >


        </activity>
        <activity
            android:name=".sign_in_or_register"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Statusbar1" >
        </activity>
        <activity
            android:name=".Register_screen"
            android:label="Register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.sign_in_or_register" />
        </activity>
        <activity
            android:name=".Sign_In"
            android:label="Login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.sign_in_or_register" />
        </activity>
        <activity android:name=".profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.MainActivity" />
        </activity>
        <activity
            android:name=".sub_activity"
            android:label="Help"
            android:theme="@style/AppTheme.Statusbar1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.MainActivity" />
        </activity>
        <activity
            android:name=".helpers.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Statusbar1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".click_on_list"
            android:label="Details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Statusbar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.MainActivity" />
        </activity>
        <activity android:name=".notification" >
        </activity>

        <receiver
            android:name=".NotifyService"
            android:enabled="true" >
        </receiver>

        <activity android:name=".date" >
        </activity>
        <activity
            android:name=".change_password"
            android:label="Change Password" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.profile" />
        </activity>
        <activity
            android:name=".Delete_account"
            android:label="Delete Account" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.profile" />
        </activity>
        <activity android:name=".dem" >
        </activity>
        <activity android:name=".sp" >
        </activity>
        <activity
            android:name=".Youtube"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Statusbar" >
        </activity>
        <activity android:name=".welcome" >
        </activity>
        <activity android:name=".forgot_password"
            android:label="Forgot Password" >
        </activity>
    </application>

</manifest>
