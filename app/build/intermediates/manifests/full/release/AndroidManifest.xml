<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moviemania.akash.projectwork"
    android:versionCode="1004"
    android:versionName="1.4" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.moviemania.akash.projectwork.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.moviemania.akash.projectwork.MainActivity" >
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.sign_in_or_register"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Statusbar1" >
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.Register_screen"
            android:label="Register" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.sign_in_or_register" />
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.Sign_In"
            android:label="Login" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.sign_in_or_register" />
        </activity>
        <activity android:name="com.moviemania.akash.projectwork.profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.MainActivity" />
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.sub_activity"
            android:label="Help"
            android:theme="@style/AppTheme.Statusbar1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.MainActivity" />
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.helpers.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Statusbar1" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.click_on_list"
            android:label="Details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Statusbar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.MainActivity" />
        </activity>
        <activity android:name="com.moviemania.akash.projectwork.notification" >
        </activity>

        <receiver
            android:name="com.moviemania.akash.projectwork.NotifyService"
            android:enabled="true" >
        </receiver>

        <activity android:name="com.moviemania.akash.projectwork.date" >
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.change_password"
            android:label="Change Password" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.profile" />
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.Delete_account"
            android:label="Delete Account" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.moviemania.akash.projectwork.profile" />
        </activity>
        <activity android:name="com.moviemania.akash.projectwork.dem" >
        </activity>
        <activity android:name="com.moviemania.akash.projectwork.sp" >
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.Youtube"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.Statusbar" >
        </activity>
        <activity android:name="com.moviemania.akash.projectwork.welcome" >
        </activity>
        <activity
            android:name="com.moviemania.akash.projectwork.forgot_password"
            android:label="Forgot Password" >
        </activity>
        <!-- Include the AdActivity and InAppPurchaseActivity configChanges and themes. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.google.android.gms.ads.purchase.InAppPurchaseActivity"
            android:theme="@style/Theme.IAPTheme" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>